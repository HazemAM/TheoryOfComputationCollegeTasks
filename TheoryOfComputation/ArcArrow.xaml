<UserControl x:Class="TheoryOfComputation.ArcArrow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">

	<Grid VerticalAlignment="Top" HorizontalAlignment="Left">
		<Path x:Name="line" Stroke="Black" StrokeThickness="3">
			<Path.Data>
				<PathGeometry>
					<PathGeometry.Figures>
						<PathFigure StartPoint="2,30">
							<PathFigure.Segments>
								<ArcSegment Size="10,15" RotationAngle="0"
									IsLargeArc="True" SweepDirection="Clockwise"
									Point="30,17"/>
							</PathFigure.Segments>
						</PathFigure>
					</PathGeometry.Figures>
				</PathGeometry>
			</Path.Data>
		</Path>
		<Polygon x:Name="head" Fill="Black" Points="0.466,12.906 3.613,7.5 0.466,2.094 18.023,7.5" Margin="5,14,-6,-14" RenderTransformOrigin="0.5,0.5">
			<Polygon.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="90"/>
					<TranslateTransform/>
				</TransformGroup>
			</Polygon.RenderTransform>
		</Polygon>
	</Grid>
	
</UserControl>
