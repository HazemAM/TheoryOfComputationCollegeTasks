<UserControl x:Class="TheoryOfComputation.BorderText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
	
	<UserControl.Resources>
		<Style x:Key="tapeItem" TargetType="TextBlock">
			<Setter Property="FontFamily" Value="Courier New"/>
			<Setter Property="FontWeight" Value="ExtraBlack"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="Margin" Value="7 0 7 0"/>
			<Setter Property="Width" Value="12"/>
		</Style>
	</UserControl.Resources>

	<Border x:Name="border" BorderBrush="Gray" BorderThickness="0 2 2 2">
		<TextBlock x:Name="txt" Style="{StaticResource tapeItem}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Border>
</UserControl>
